<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whatsappclone.whatsappclone">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhatsAppClone">
        <activity
            android:name=".ui.actvities.ChatActivity"
            android:exported="false" />

        <activity
            android:name=".ui.actvities.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.actvities.auth.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.actvities.auth.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.actvities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.actvities.auth.LoginActivity"
            android:exported="false" />
    </application>

</manifest>