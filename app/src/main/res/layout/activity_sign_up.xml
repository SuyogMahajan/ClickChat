<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.actvities.auth.SignUpActivity">

    <TextView
        android:id="@+id/headTv"
        style="@style/Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Profile Info" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        android:layout_alignParentBottom="true"
        android:src="@drawable/sign_up_back" />

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/ProfileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/NameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:padding="3dp"
        android:scaleType="centerCrop"

        android:src="@drawable/profile_dummy"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:strokeColor="@color/black"
        app:strokeWidth="4dp" />

    <EditText
        android:id="@+id/NameEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/NextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext_box"
        android:elevation="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Profile Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/NextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/background"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:enabled="false"
        android:gravity="center"
        android:padding="10dp"
        android:text="Next"
        android:textSize="18dp"
        app:cornerRadius="20dp" />

</RelativeLayout>